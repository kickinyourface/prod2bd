<p id="notice"><%= notice %></p>

<h1>Listing Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Cod factura</th>
      <th>Cod transporte</th>
      <th>Cod cliente</th>
      <th>Fecha pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.cod_factura %></td>
        <td><%= pedido.cod_transporte %></td>
        <td><%= pedido.cod_cliente %></td>
        <td><%= pedido.fecha_pedido %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

